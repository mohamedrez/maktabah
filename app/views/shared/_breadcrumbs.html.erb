<nav class="flex mb-7" aria-label="Breadcrumb">
  <ol class="inline-flex items-center space-x-1 md:space-x-3">
    <li class="inline-flex items-center">
      <a href="<%= url_for tracks_url %>" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
        <svg aria-hidden="true" class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
        <%= t("breadcrumb.all_paths") %>
      </a>
    </li>
    <li>
      <div class="flex items-center">
        <%= render partial: "shared/breadcrumbs_arrow" %>
        <a href="<%= url_for courses_url(track_id: track.id) %>" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2 dark:text-gray-400 dark:hover:text-white">
          <span class="text-lg font-medium text-purple-500"><%= t("breadcrumb.track") %></span> <%= track.name %>
        </a>
      </div>
    </li>
    <% if where_am_i == 'course' %>
      <li>
        <div class="flex items-center">
          <%= render partial: "shared/breadcrumbs_arrow" %>
          <a href="<%= url_for course_url(id: course.id) %>" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2 dark:text-gray-400 dark:hover:text-white">
            <span class="text-lg font-medium text-blue-500"><%= t("breadcrumb.course") %></span> <%= course.name %>
          </a>
        </div>
      </li>
    <% elsif where_am_i == 'step' %>
      <li>
        <div class="flex items-center">
          <%= render partial: "shared/breadcrumbs_arrow" %>
          <a href="<%= url_for course_url(id: course.id) %>" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2 dark:text-gray-400 dark:hover:text-white">
            <span class="text-lg font-medium text-blue-500"><%= t("breadcrumb.course") %></span> <%= course.name %>
          </a>
        </div>
      </li>
      <li aria-current="page">
        <div class="flex items-center">
          <%= render partial: "shared/breadcrumbs_arrow" %>
          <p><span class="text-lg font-medium text-sky-500"><%= t("breadcrumb.step") %></span> <%= step.name %></p>
        </div>
      </li>
    <% end %> 
  </ol>
</nav>
