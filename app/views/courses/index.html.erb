<%= render partial: "shared/breadcrumbs", locals: {track: @track, where_am_i: 'track'} %>
<!--<h1 class="text-3xl font-bold underline" ><%= @track.name %></h1>-->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-10">
  <div class="md:flex mb-10">
    <div class="md:w-1/2 md:pr-8 mb-10">
      <h1 class="text-2xl text-gray-800 dark:text-white lg:text-6xl tracking-tight leading-none font-extrabold"><%= @track.name %></h1>
      <p class="mt-8 text-lg text-gray-700 dark:text-gray-500"><%= @track.description %></p>
    </div>
    <div class="bg-white dark:bg-gray-800 shadow rounded-md p-4 md:p-8 lg:w-1/3 mx-20">
      <h3 class="text-lg md:text-2xl font-bold"><%= @track.name %></h3>
      <div class="text-gray-700 flex justify-between py-2 dark:text-gray-500">
        <div class="font-bold"><%= t("courses.co") %></div>
        <div><%= @track.courses.count %></div>
      </div>
      <div class="text-gray-700 flex justify-between py-2 dark:text-gray-500">
        <div class="font-bold"><%= t("courses.steps") %></div>
        <div><%= @track.how_many_steps %></div>
      </div>
    </div>
  </div>
</div>
<% @courses.each do |course| %>
  <div class="bg-white shadow rounded-lg dark:bg-gray-800 dark:ring-1 dark:ring-white/10 dark:ring-inset mb-16 relative">
    <div class="p-8 pb-0 ">
      <div class="flex flex-col items-center justify-between space-y-5 border-b border-gray-300 dark:border-gray-600 pb-4 md:flex-row md:space-y-0">
        <div class="flex flex-col items-center space-y-4 md:flex-row md:space-x-4 text-center md:space-y-0">
          <a href="<%= url_for(course_url(course)) %>">
            <div class="shadow-md dark:shadow-none rounded-full flex w-24 h-24" data-test-id="default-badge">
              <%= image_tag "icons/course.svg", alt: "#{course.name}", class: "p-2.5" %>
            </div>
          </a>
          <a class="flex flex-col md:items-start" href="<%= url_for(course_url(course)) %>">
            <h2 id="intermediate-html-and-css" class="font-medium text-xl md:text-left text-gray-600 dark:text-gray-200">
              <%= course.name %>
            </h2>
            <span class=" text-sm text-gray-400"><%= course.steps_count %> <%= t("courses.lessons") %></span>
          </a>
        </div>
        <a class="button button--clear" href="<%= url_for(course_url(course)) %>"><%= t("courses.open_course") %></a>
      </div>
    </div>
    <div class="p-8 ">
      <p class="prose prose-gray dark:prose-invert max-w-none"><%= course.description %></p>
    </div>
  </div>
<% end %>
