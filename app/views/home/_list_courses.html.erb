<% if courses.any? %>
  <section class="text-gray-400 body-font">
    <div class="container px-5 py-24 mx-auto">
      <div class="flex flex-wrap -m-4">
        <% courses.each do |course_id| %>
          <% course = Course.find(course_id) %>
          <div class="p-4 lg:w-1/3">
            <div class="h-full bg-neutral-200 shadow dark:bg-gray-800 px-8 pt-16 pb-16 rounded-lg overflow-hidden relative">
              <h2 class="tracking-widest text-xs title-font font-medium text-gray-500 mb-1"><%= t('home.block.course') %></h2>
              <h1 class="title-font sm:text-2xl text-xl font-medium text-gray-800 dark:text-gray-200 mb-3"><%= course.name %></h1>
              <div class="leading-relaxed mb-4"><%= course.description %></div>    
              <a class="text-indigo-600 dark:text-indigo-500 inline-flex items-center" href="<%= url_for(course_url(course)) %>"><%= t('home.block.view_course') %>
                <%= render partial: "arrow_left" %>
              </a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% else %>
  <%= render partial: "nothing_here" %>
<% end %>
