<div class="col-span-6">
    <% if I18n.locale == :en %>
        <%= form.label :avatar, t("profiles.avatar"), class: "my-3 mr-5 text-sm font-medium text-gray-900 dark:text-white" %>
    <% else %>
        <%= form.label :avatar, t("profiles.avatar"), class: "my-3 ml-5 text-sm font-medium text-gray-900 dark:text-white" %>
    <% end %>
    <%= form.label :avatar, t("profiles.avatar") do %>
        <div class="flex items-center mt-4">
            <% if current_user&.avatar.attached? %>
                <%= image_tag current_user.avatar, class: "w-16 h-16 rounded-full", alt: "user avatar" %>
            <% elsif current_user&.avatar_url.present? %>
                <%= image_tag current_user.avatar_url, class: "w-16 h-16 rounded-full", alt: "user avatar by provider" %>
            <% else %>
                <%= image_tag "users/user.svg", class: "w-16 h-16 rounded-full", alt: "default user avatar" %> 
            <% end %>
        </div>
        <%= form.file_field :avatar, class: "hidden text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400", accept: 'image/png,image/jpg,image/jpeg' %>
    <% end %>
    <p class="text-sm text-gray-500 mt-2 dark:text-gray-400"><%= t("profiles.change_image") %>.</p>
</div>